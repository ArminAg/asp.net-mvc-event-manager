@model asp.net_mvc_event_manager.Core.ViewModels.EventFormViewModel
@{
    ViewBag.Title = Model.Heading;
}

<h1>@Model.Heading</h1>
<div class="row">
    <div class="col-lg-6">
        <div class="well bs-component">
            @using (Html.BeginForm(Model.Action, "Events", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <p class="alert alert-info">All fields are <strong>required.</strong></p>
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                <div class="form-group">
                    @Html.LabelFor(m => m.Venue, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(m => m.Venue, new { @class = "form-control", autofocus = "autofocus" })
                        @Html.ValidationMessageFor(m => m.Venue)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Date, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(m => m.Date, new { @class = "form-control", placeholder = "eg 1 Jan 2018" })
                        @Html.ValidationMessageFor(m => m.Date)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Time, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(m => m.Time, new { @class = "form-control", placeholder = "eg 20:00" })
                        @Html.ValidationMessageFor(m => m.Time)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.GenreId, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.DropDownListFor(m => m.GenreId, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.GenreId)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

